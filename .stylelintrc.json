{
  "extends": "stylelint-config-standard",
  "rules": {
    "comment-empty-line-before": "never",
    "declaration-empty-line-before": [
      "always",
      {
        "except": ["first-nested", "after-comment"],
        "ignore": ["after-declaration"]
      }
    ],
    "ignoreAtRules": ["each"]
  }
}
